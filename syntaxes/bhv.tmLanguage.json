{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "IvP Behavior",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#single_line_comments"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#bhv_block"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.bhv",
					"match": "^\\s*\\b((?i)initialize|initialize_|set)\\b"
				},
				{
					"name": "keyword.preprocessor.bhv",
					"match": "^\\s*#(include|ifdef|elseifdef|endif|else|define|ifndef)\\s+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.bhv",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bhv",
					"match": "\\\\."
				}
			]
		},
		"single_line_comments": {
			"name": "comment.single.line.bhv",
			"begin": "//",
			"end": "$",
			"patterns": [
				{
					"name": "constant.character.escape.bhv",
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.bhv",
					"begin": "[\\$|%]\\(",
					"end": "\\)",
					"patterns": [
						{
							"name": "constant.character.escape.bhv",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "support.function.bhv",
					"begin": "\\$\\{",
					"end": "\\}",
					"patterns": [
						{
							"name": "constant.character.escape.bhv",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "invalid.illegal.bhv",
					"begin": "\\$[^\\s\\{\\(]+",
					"end": "[\\s|$]",
					"patterns": [
						{
							"name": "constant.character.escape.bhv",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"bhv_block": {
			"begin": "^\\s*((?i)Behavior)\\s*=\\s*(\\w*)\\s*",
			"end": "(?<=\\})",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.bhv"
				},
				"2": {
					"name": "entity.name.type.bhv"
				}
			},
			"patterns": [
				{
					"name": "keyword.control.bhv",
					"match": "^\\s*\\b(name|pwt|condition|updates|runflag|endflag|inactiveflag|activeflag|idleflag|perpetual|duration_status|duration_reset|duration|duration_idle_decay|templating)\\b\\s*"
				},
				{
					"include": "#single_line_comments"
				},
				{
					"include": "#variables"
				},
				{
					"include": "#keywords"
				},
				{
					"begin": "\\G ?",
					"end": "(?:\\{|<%|\\?\\?<|(?=;))|(?=(?<!\\\\)\n)\\s*",
					"beginCaptures": {},
					"endCaptures": {
						"0": {
							"name": "punctuation.section.block.begin.bracket.curly.behavior.bhv"
						}
					},
					"name": "meta.head.behavior.bhv",
					"patterns": [
						{
							"include": "$self"
						}
					]
				},
				{
					"begin": "(?<=\\{|<%|\\?\\?<)",
					"end": "\\}|%>|\\?\\?>|(?=(?<!\\\\)\n)\\s*",
					"beginCaptures": {},
					"endCaptures": {
						"0": {
							"name": "punctuation.section.block.end.bracket.curly.behavior.bhv"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.bhv"
}
