{
    "name": "moos-ivp-editor",
    "displayName": "MOOS-IvP Editor",
    "publisher": "cgagner",
    "description": "Syntax highlighting for MOOS-IvP configuration files.",
    "version": "0.2.0",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/cgagner/vscode-moos-ivp-editor.git"
    },
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "workspaceContains:**/*.moos",
        "workspaceContains:**/*.bhv",
        "workspaceContains:**/*.plug",
        "workspaceContains:**/*.def",
        "workspaceContains:**/*.meta",
        "onLanguage:moos",
        "onLanguage:ivp-behavior",
        "onCommand:client.helloWorld"
    ],
    "main": "./dist/client/client.js",
    "contributes": {
        "commands": [
            {
                "command": "client.helloWorld",
                "title": "Hello World"
            }
        ],
        "configuration": [
            {
                "title": "MOOS-IvP",
                "properties": {
                    "moos-ivp.includePath": {
                        "type": [
                            "array",
                            "null"
                        ],
                        "default": [],
                        "description": "Specifies a list of directories to look for include files when evaluating a mission file if the include file is not found in the current directory.",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "moos",
                "aliases": [
                    "MOOS",
                    "moos"
                ],
                "extensions": [
                    ".moos",
                    ".moos++",
                    ".plug",
                    ".meta",
                    ".def"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "ivp-behavior",
                "aliases": [
                    "IvP Behavior",
                    "ivp-behavior"
                ],
                "extensions": [
                    ".bhv",
                    ".bhv++"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": []
    },
    "configurationDefaults": {
        "moos": {
            "editor.semanticHighlighting.enabled": true
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "package": "vsce package --no-yarn",
        "compile": "(cd ext/moos-language-server && wasm-pack build --target nodejs) && tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint src --ext ts",
        "postinstall": "npm install ./server; npm install ./client"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "ts-loader": "^9.2.2",
        "typescript": "^4.3.2",
        "vsce": "^2.5.3",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "vscode-moos-ivp-client": "file:client",
        "vscode-moos-ivp-server": "file:server"
    }
}